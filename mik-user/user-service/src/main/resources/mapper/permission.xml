<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mik.user.mapper.PermissionMapper">


    <resultMap id="PermissionDTOResultMap" type="com.mik.user.controller.cqe.PermissionDTO">
        <id property="pId" column="p_id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="parent" column="parent"/>
        <result property="icon" column="icon"/>
        <result property="path" column="path"/>
        <result property="url" column="url"/>
        <result property="sort" column="sort"/>
        <result property="createTime" column="create_time"/>
    </resultMap>


    <select id="listUserPermission" resultMap="PermissionDTOResultMap" parameterType="java.lang.Long">
        SELECT DISTINCT p.*
        FROM role_permission rp
                 LEFT JOIN permission p ON p.p_id = rp.p_id
        WHERE rp.role_id IN (
            SELECT role_id
            FROM user_role ur
            WHERE user_id = #{userId}
        )
    </select>

</mapper>
